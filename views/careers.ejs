<!-- Application Modal -->
<div class="modal fade" id="applyModal" tabindex="-1" aria-labelledby="applyModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="applyModalLabel">Apply for <span id="modalPosition">Position</span></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="applicationForm" enctype="multipart/form-data">
          <input type="hidden" id="position" name="position">
          <div class="mb-3">
            <label for="name" class="form-label">Full Name *</label>
            <input type="text" class="form-control" id="name" name="name" required>
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email Address *</label>
            <input type="email" class="form-control" id="email" name="email" required>
          </div>
          <div class="mb-3">
            <label for="phone" class="form-label">Phone Number</label>
            <input type="tel" class="form-control" id="phone" name="phone">
          </div>
          <div class="mb-3">
            <label for="resume" class="form-label">Resume/CV (PDF, DOC, DOCX) *</label>
            <input type="file" class="form-control" id="resume" name="resume" accept=".pdf,.doc,.docx" required>
          </div>
          <div class="mb-3">
            <label for="coverLetter" class="form-label">Cover Letter</label>
            <textarea class="form-control" id="coverLetter" name="coverLetter" rows="5"></textarea>
          </div>
          <div class="alert alert-success d-none" id="applicationSuccess">
            Your application has been submitted successfully!
          </div>
          <div class="alert alert-danger d-none" id="applicationError">
            There was an error submitting your application. Please try again.
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="submitApplication">Submit Application</button>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Set position in modal when button is clicked
    const applyModal = document.getElementById('applyModal');
    applyModal.addEventListener('show.bs.modal', function(event) {
      const button = event.relatedTarget;
      const position = button.getAttribute('data-position');
      document.getElementById('modalPosition').textContent = position;
      document.getElementById('position').value = position;
    });
    
    // Handle form submission
    document.getElementById('submitApplication').addEventListener('click', function() {
      const form = document.getElementById('applicationForm');
      const formData = new FormData(form);
      
      // Form validation
      if (!form.checkValidity()) {
        form.reportValidity();
        return;
      }
      
      // Submit form via AJAX
      fetch('/api/applications', {
        method: 'POST',
        body: formData
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          document.getElementById('applicationSuccess').classList.remove('d-none');
          document.getElementById('applicationError').classList.add('d-none');
          form.reset();
          
          // Close modal after 3 seconds
          setTimeout(() => {
            const modal = bootstrap.Modal.getInstance(applyModal);
            modal.hide();
            document.getElementById('applicationSuccess').classList.add('d-none');
          }, 3000);
        } else {
          throw new Error(data.message || 'Error submitting application');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        document.getElementById('applicationError').classList.remove('d-none');
        document.getElementById('applicationSuccess').classList.add('d-none');
        document.getElementById('applicationError').textContent = error.message || 'There was an error submitting your application. Please try again.';
      });
    });
  });
</script>

